<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#804DDEEC"
    android:orientation="vertical"
    tools:context=".Activities.ReadMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#128FF3"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backchap"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:padding="15dp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
            <TextView
                android:id="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Ten Truyen"
                android:textSize="20dp"
                android:textColor="#fff"
                android:gravity="center"
                tools:ignore="InvalidId"
                />
        <TextView
            android:id="@+id/tenchap"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Ten Truyen"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            tools:ignore="InvalidId"
            />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/optiontext"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_optinitem"
            android:tint="@color/black" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scolltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@drawable/bg_dialog_white"
        >
    <TextView
        android:id="@+id/noidung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text="noi dung"
        android:scrollbars="vertical">
    </TextView>
    </ScrollView>

</LinearLayout>